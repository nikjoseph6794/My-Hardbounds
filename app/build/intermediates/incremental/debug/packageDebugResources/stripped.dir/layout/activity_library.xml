<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="56dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

<TextView
android:id="@+id/libraryHeader"
android:text="📚  My Library"
android:textStyle="bold"
android:textSize="22sp"
android:layout_marginBottom="16dp"
android:layout_width="match_parent"
android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/searchInput"
        android:hint="Search by title or author"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emptyHint"
        android:text="No matches found"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/backupBtn"
        android:text="☁️ Create Backup"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp" />

    <Button
        android:id="@+id/restoreBtn"
        android:text="⬇️ Restore from Backup"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp" />

    <!-- Add this block near the top, before the list -->
    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="4dp">

        <!-- Counts -->
        <TextView
            android:id="@+id/countText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 0 • Read: 0 • Unread: 0"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="8dp" />

        <!-- Read / Unread toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/readToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Read"
                android:padding="4dp" />
        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
android:id="@+id/libraryList"
android:layout_marginTop="16dp"
android:layout_width="match_parent"
android:layout_height="match_parent" />
    </LinearLayout>
